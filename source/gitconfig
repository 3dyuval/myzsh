[alias]
    info = remote show origin
    ci = commit
    st = status -sb
    oops = reset --soft HEAD~1
    unstage = reset HEAD --

[diff]
    mnemonicprefix = true

[color "status"]
    header = blue
    changed = yellow
    added = green
    untracked = red

[color "branch"]
    current = yellow bold
    remote = red
    local = blue

[color "diff"]
    meta = yellow
    frag = blue
    old = red
    new = green

[push]
    default = simple

[advice]
    statusHints = false
    detachedHead = false
    pushNonFastForward = false
    commitBeforeMerge = false
    resolveConflict = false

[include]
    path = ~/.gitconfig.local

[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true

[status]
    showUntrackedFiles = all

[merge]
    log = true
[protocol]
	version = 2
